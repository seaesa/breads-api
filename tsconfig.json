{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"outDir": "dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"lib": ["ESNext"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"],
	"ts-node": {
		"swc": true,
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
