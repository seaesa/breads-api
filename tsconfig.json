{
	"compilerOptions": {
		"target": "ES2015",
		"module": "ESNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"verbatimModuleSyntax": true,
		"moduleResolution": "Node"
	},
	"ts-node": {
		"swc": true,
		"compilerOptions": {
			"module": "CommonJS"
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
